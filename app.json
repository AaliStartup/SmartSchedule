{
  "expo": {
    "name": "SmartSchedule",
    "slug": "SmartSchedule",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "smartschedule",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "SmartSchedule needs camera access to scan your schedules and documents.",
        "NSPhotoLibraryUsageDescription": "SmartSchedule needs photo library access to import images of your schedules."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1F4788",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "SmartSchedule needs camera access to scan your schedules and documents."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SmartSchedule needs photo library access to import images of your schedules."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1F4788"
        }
      ]
    ]
  }
}
